<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blurbackground">




    <TextView
        android:textColor="@color/white"
        android:id="@+id/Subscription"
        android:layout_width="421dp"
        android:layout_height="50dp"
        android:background="#2F7875"
        android:text="Subscription"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:background="#2F7875"
        android:id="@+id/textViewSubscriptionOptions"
        android:layout_width="421dp"
        android:layout_height="40dp"
        android:textSize="30dp"
        android:text="Choose Meal Option:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <RadioGroup
            android:id="@+id/radioGroupSubscriptionOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:id="@+id/radioButtonVeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetarian" />

            <RadioButton
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:id="@+id/radioButtonNonVeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non-Vegetarian" />

        </RadioGroup>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">


        <RadioGroup

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonWeek"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly" />

            <RadioButton
                android:id="@+id/radioButtonMonth"
                android:textColor="@color/white"
                android:layout_marginLeft="43dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly" />

            <RadioButton
                android:id="@+id/radioButtonQuaterly"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quaterly" />
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <RadioGroup
            android:id="@+id/radioGroupSubscriptionOptionsMeal_Selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:id="@+id/radioButtonLunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch" />

            <RadioButton
                android:textColor="@color/white"
                android:layout_marginLeft="53dp"
                android:id="@+id/radioButtonDinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner" />

            <RadioButton
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:id="@+id/radioButtonBoth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Both" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/selectDateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:layout_centerInParent="true"/>

        <TextView
            android:text=""
            android:background="#2F7875"
            android:textColor="@color/white"
            android:id="@+id/Start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"></TextView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_marginTop="20dp"
                android:text=""
                android:background="#2F7875"
                android:textColor="@color/white"
                android:id="@+id/End_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"></TextView>

        </LinearLayout>





    <TextView
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:id="@+id/totalAmount"
        android:layout_width="421dp"
        android:layout_height="40dp"
        android:background="#2F7875"
        android:text="TOTAL AMOUNT :"
        android:textAlignment="center"
        android:textSize="30dp" />

    <Button
        android:onClick="submit"
        android:backgroundTint="#2F7875"
        android:id="@+id/buttonProceedToPayment"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Proceed to Payment" />


    <Button
        android:backgroundTint="#2F7875"
        android:id="@+id/Logout"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Logout" />

</LinearLayout>
