<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsSubscription"
    android:background="@drawable/details">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="80dp"
        >

        <TextView
            android:id="@+id/EditTextName1"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FULL NAME :"
            ></TextView>


        <TextView
            android:id="@+id/EditTextName2"
            android:layout_marginLeft="55dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dummy"
            ></TextView>

    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/EditTextStartDate1"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START DATE :"
            ></TextView>


        <TextView
            android:id="@+id/EditTextStartDate2"
            android:layout_marginLeft="50dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dummy"
            ></TextView>

    </LinearLayout>




    <LinearLayout
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/EditTextEndDate1"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="END DATE :"
            ></TextView>


        <TextView
            android:id="@+id/EditTextEndDate2"
            android:layout_marginLeft="65dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dummy"
            ></TextView>

    </LinearLayout>





    <LinearLayout
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/EditTextRemainingDays1"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REMAINING DAYS :"
            ></TextView>


        <TextView
            android:id="@+id/EditTextRemainingDays2"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dummy"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/EditTextAmountPaid1"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AMOUNT PAID :"
            ></TextView>


        <TextView
            android:id="@+id/EditTextAmountPaid2"
            android:layout_marginLeft="40dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dummy"
            ></TextView>



    </LinearLayout>
</LinearLayout>


    <Switch
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:background="@color/white"
        android:id="@+id/subscriptionSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscription"
        android:checked="true"
        android:layout_centerInParent="true" />


</LinearLayout>
