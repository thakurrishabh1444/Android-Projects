<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.homefragment"
    android:background="@drawable/background"
    android:orientation="vertical">

    <!-- RecyclerView for Menu Items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </androidx.recyclerview.widget.RecyclerView>

    <!-- Footer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <!-- App Logo and Information -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:src="@drawable/restaurant_logo" />

        <!-- App Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiffinwala"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available in Phase1,Phase2 and Phase3 - Hinjawadi Pune "
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright Â© 2023 Tiffinwala"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Social Media Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:id="@+id/facebookImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/facebook_logo"
                android:clickable="true"
                android:tag="facebook" />

            <ImageView
                android:id="@+id/twitterImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/twitter_logo"
                android:clickable="true"
                android:tag="twitter" />

            <ImageView
                android:id="@+id/instagramImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/instagram_logo"
                android:clickable="true"
                android:tag="instagram" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
